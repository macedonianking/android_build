import("//gn/build/config/features.gni")

config("feature_flags") {
  defines = []

  defines += [ "NR_CPU=$nr_cpu" ]

  if (enable_pdf) {
    defines += [ "ENABLE_PDF=1" ]
  }
}

config("debug") {
  defines = [ "_DEBUG" ]
  cflags = [ "-g" ]
}

config("release") {
  defines = [ "NDEBUG" ]
}

config("default_libs") {
  libs = []

  if (is_android) {
    libs += [
      "dl",
      "m",
    ]
  }
}

config("shared_library_config") {
  cflags = [ "-fPIC" ]
  ldflags = [ "-shared" ]
}
